@model KreditrechnerLAP.web.Models.KreditRechnerModel

@{
    ViewBag.Title = "KreditRechner";
}

<h2>KreditRechner</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>KreditRechnerModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Kreditbetrag, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="example_id" name="example_name" onChange="berechnen()"/>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Laufzeit, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="example_id2" name="example_name2" onChange="berechnen()"/>
            </div>
        </div>
        <div class="col-md-offset-6">
            <div>
                <span id="ergebnis">83.33</span> €
            </div>
        </div>
        <div class="col-md-4"></div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
        
//Ergebnis slider 1
        $(document).ready(function () {
            var $range = $("#example_id"),
                $result = $("#result_1");

            var track = function (data) {
                $result.html("Value: " + data.from);
            };

            $range.ionRangeSlider({
                type: "single",
                grid: true,
                min: 3000,
                max: 40000,
                from: 5000,
                step: 500,
                postfix: " €",
                onStart: track,
                onChange: track,
                onFinish: track,
                onUpdate: track
            });
        });

    //ergebnis Slider 2
        $(document).ready(function () {
            var $range = $("#example_id2"),
                $result = $("#result_2");

            var track = function (data) {
                $result.html("Value: " + data.from);
            };

            $range.ionRangeSlider({
                type: "single",
                grid: true,
                min: 12,
                max: 120,
                from: 60,
                step: 6,
                postfix: " Monate",
                onStart: track,
                onChange: track,
                onFinish: track,
                onUpdate: track
            });
        });

function berechnen() {
    var $kredit = document.getElementById('example_id').value;
    var $monat = document.getElementById('example_id2').value
    erg =  Math.round(($kredit / $monat)*100)/100;
    document.getElementById('ergebnis').innerHTML = erg;
   
}


</script>
}
